{
  "name": "minionah-newsroom",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "pnpm \"/dev:/\"",
    "dev:content": "velite dev --watch",
    "dev:svelte": "vite dev",
    "build": "velite && vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "velite && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "pnpm build:content && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint . && pnpm check",
    "update:shadcn": "pnpm dlx shadcn-svelte update -a && prettier --write ./src/lib/components/ui"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.31.0",
    "@internationalized/date": "^3.8.2",
    "@lucide/svelte": "^0.525.0",
    "@svecodocs/kit": "^0.3.0",
    "@sveltejs/adapter-node": "^5.2.13",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.22.5",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "bits-ui": "^2.8.10",
    "clsx": "^2.1.1",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-svelte": "^8.6.0",
    "embla-carousel-wheel-gestures": "^8.0.2",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-svelte": "^3.10.1",
    "globals": "^16.3.0",
    "mdsx": "^0.0.7",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rehype-external-links": "^3.0.0",
    "remark-toc": "^9.0.0",
    "svelte": "^5.35.6",
    "svelte-check": "^4.2.2",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "velite": "^0.2.4",
    "vite": "^7.0.4",
    "vite-plugin-devtools-json": "^0.2.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "sharp"
    ]
  },
  "engines": {
    "node": "^22",
    "pnpm": "^10",
    "deno": "forbidden, use node instead",
    "npm": "forbidden, use pnpm instead",
    "yarn": "forbidden, use pnpm instead",
    "bun": "forbidden, use pnpm instead"
  }
}
